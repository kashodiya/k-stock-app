<% include header %>

  <div class="well1" ng-controller="StockCtrl">
    <h3>Srocks</h3>
    <div>
      <canvas id="line" class="chart chart-line" chart-data="data" chart-labels="labels" chart-legend="true" chart-series="series" chart-click="onClick" chart-options="{pointDotRadius : 2, pointHitDetectionRadius: 5}">
      </canvas>
    </div>
    <div class="well">
      <div>
        <ul class="list-inline">
          <li class="symbol" ng-repeat="symbol in symbols">
            {{symbol}}
            <button type="button" class="btn btn-default btn-xs" ng-click="removeSymbol(symbol)">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
          </li>
        </ul>
      </div>
      <form class="form-inline" ng-submit="addSymbol()">
        <div class="form-group">
          <label for="newSymbol">Symbol</label>
          <input type="text" class="form-control" id="newSymbol" ng-model="newSymbol">
        </div>
        <button type="submit" class="btn btn-default">Add</button>
      </form>
      <p ng-hide="msg == ''">{{msg}}</p>
    </div>


  </div>

  <% include footer %>